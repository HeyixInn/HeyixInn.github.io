<div class="education">
  {% if site.data.education != blank %}
    <ul class="education-list">
      {% assign edu_list = site.data.education | reverse %}
      {% for edu in edu_list %}
        <li class="education-item">
          <span class="degree"><strong>ðŸŽ“ {{ edu.degree }}</strong></span>,
          <span class="years" style="color: #666;">{{ edu.years }}</span>,
